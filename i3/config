bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -d "intel_backlight" set +05%

bindsym Shift+XF86MonBrightnessDown exec --no-startup-id brightnessctl -d "intel_backlight" set 01%-
bindsym Shift+XF86MonBrightnessUp exec --no-startup-id brightnessctl -d "intel_backlight" set +01%

